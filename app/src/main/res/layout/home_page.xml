<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/homePageRoot"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seja bem vindo (a), "
        android:fontFamily="@font/poppins_light"
        android:textSize="16sp"
        android:layout_marginTop="25sp"
        android:layout_marginStart="15sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userNameHome"
        android:text="Carregando..."
        android:layout_marginStart="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activitysHomeBox"
        android:orientation="horizontal"
        android:layout_marginTop="100sp"
        android:layout_marginStart="45sp"
        android:layout_marginEnd="50sp"
        android:padding="10sp"
        android:background="@drawable/rounded_conors_all"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activitysImageicon"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/activitys_logo_home"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atividades"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veja suas Ãºltimas atividade e se organize melhor!"
                android:fontFamily="@font/poppins_light"
                android:textSize="10sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_marginEnd="10sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="Atividades"
                android:fontFamily="@font/poppins_bold"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>